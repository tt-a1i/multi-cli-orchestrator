{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ReviewFindingsEnvelope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "findings"
  ],
  "properties": {
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "finding_id",
          "severity",
          "category",
          "title",
          "evidence",
          "recommendation",
          "confidence",
          "fingerprint"
        ],
        "properties": {
          "finding_id": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "category": {
            "type": "string",
            "enum": [
              "bug",
              "security",
              "performance",
              "maintainability",
              "test-gap"
            ]
          },
          "title": {
            "type": "string"
          },
          "evidence": {
            "type": "object",
            "additionalProperties": true,
            "required": [
              "file",
              "line",
              "symbol",
              "snippet"
            ],
            "properties": {
              "file": {
                "type": "string"
              },
              "line": {
                "type": [
                  "integer",
                  "null"
                ]
              },
              "symbol": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "snippet": {
                "type": "string"
              }
            }
          },
          "recommendation": {
            "type": "string"
          },
          "confidence": {
            "type": "number"
          },
          "fingerprint": {
            "type": "string"
          }
        }
      }
    }
  }
}
